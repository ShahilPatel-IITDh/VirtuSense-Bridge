<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="20dp"
    tools:context=".MainActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="VIRTUSENSE BRIDGE"
        android:letterSpacing="0.15"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="Live Digital Twin Monitor"
        android:textColor="#AAAAAA"
        android:textSize="12sp" />

    <!-- Main Status Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/statusCard"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_below="@id/subHeader"
        android:layout_marginTop="30dp"
        android:backgroundTint="#2D2D2D"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/iconStatus"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@android:drawable/ic_popup_sync"
                app:tint="#FFFFFF"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:id="@+id/lblStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CONNECTING"
                android:textColor="#FFFFFF"
                android:textSize="36sp"
                android:textStyle="bold"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"/>

            <TextView
                android:id="@+id/lblValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Waiting for ESP32..."
                android:textColor="#E0E0E0"
                android:textSize="20sp"
                android:fontFamily="monospace"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- History Log Title -->
    <TextView
        android:id="@+id/lblHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/statusCard"
        android:layout_marginTop="24dp"
        android:text="EVENT LOG"
        android:textColor="#666666"
        android:textStyle="bold"
        android:textSize="12sp"
        android:letterSpacing="0.1"/>

    <!-- Scrollable History Log -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lblHistory"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_log_panel"
        android:padding="10dp">
        
        <TextView
            android:id="@+id/txtLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-- System Initialized --"
            android:textColor="#00FF00"
            android:fontFamily="monospace"
            android:textSize="12sp"
            android:lineSpacingExtra="4dp"/>
    </ScrollView>

    <!-- Footer -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Broker: test.mosquitto.org:1883"
        android:textColor="#444444"
        android:textSize="10sp" />

</RelativeLayout>